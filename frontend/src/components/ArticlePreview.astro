---
interface Props
{
    title : string,
    description : string,
    preview : string,
    url : string,
    cold : false
}
let {title, description, preview, url, cold} = Astro.props;
let datacold = 'data-cold'; //stupid that this is necessary
---
<article>
    <a href={url} { (cold ? {datacold} : {}) }>
        <div class='previewholder'><img src={preview} alt = 'preview image'></div>
        <div class="textholder">
            <h2>{title}</h2>
            <p>{description}</p>
        </div>
    </a>
</article>
<style>
    .previewholder
    {
        width:100%;
        height:70%;
        border-radius:25%;
    }
    .textholder
    {
        height:30%;
        margin-left: .25em;
    }
    .textholder>h2
    {
        margin-top:0px;
        padding-top:20px;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow:hidden;
    }
    p
    {  
        overflow: hidden;
        text-overflow: ellipsis;
        margin-top: 0px;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }
    img
    {
        left:-1px;
        object-fit:cover;
        width:100%;
        height:100%;
        border-top-left-radius: 6px;
        border-top-right-radius: 6px;
    }
    article
    {
        margin-left: auto;
        margin-right: auto;
        border-radius: 6px;
        box-shadow: 0px 0px 2px black;
        background-color:rgb(40,40,45);
        width:90%;
        max-height:400px;
        max-width:545px;
    }
    a
    {
        color:inherit;
        text-decoration: inherit;
    }
</style> 