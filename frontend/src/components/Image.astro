---
export interface Props {
	url: string;
	maxwidth: string;
    alt:string;
}

const { src,maxwidth,alt } = Astro.props;
---
<div class='container'>
    <img src={src} alt={alt}>
</div>

<style define:vars={{maxwidth}}>
    .container
    {
        max-width: var(--maxwidth);
        max-height: var(--maxheight);
        margin: 1.5em auto;
    }
    img 
    {
        width:100%;
        height:100%;
    }
</style>